# Add git aliases

alias gs='git status'
alias gd='git diff'
alias gc='git commit'
alias gp='git push'
alias ga='git add'
alias gr='git remote -v'
alias gl='git log'
alias gsu="git submodule foreach 'git pull && git submodule update --init --recursive'"
alias gsi='git submodule update --init --recursive'
alias gpr='git pull --rebase'
alias gtp='git push --tags'
alias gdc='git diff --cached'
alias gt='git fetch --tags origin'

