# Based on ssh-agent code
if [ "$(uname)" != "Darwin" ]; then return ; fi

function start_gpg_agent () {
    gpgconf --launch gpg-agent
}

function kgpg () {
    ps aux | awk '/[g]pg-agent --daemon/ {print $2}' | xargs kill -9
    start_gpg_agent
}

if type gpgconf > /dev/null; then
    start_gpg_agent
fi
